package logic;

public class Piece {
	private String color;
	private boolean fill;

	public Piece(){
		color =null;
		fillPiece(false);

	}
	public Piece(String color){
		if(!color.equals("white") && !color.equals("black")){
			color =null;
			fillPiece(false);
			System.out.println("invalid color");
			return;
		}
		this.color=color;
		fillPiece(true);

	}
	public void fillPiece(String color){
		this.color=color;
		this.fill=true;
	}
	public boolean isFill() {
		return fill;
	}
	
}
