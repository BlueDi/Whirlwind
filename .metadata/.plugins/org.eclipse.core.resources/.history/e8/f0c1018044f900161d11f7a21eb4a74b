package logic;

public class Board {
	private Piece[][]board;

	public Board(int n){
		if(n<12)
		{System.out.println("incorrect option of cases");
			return;
			}
		board=new Piece[n][n];
		int l=0;
		for(int i=0; i<board.length;i++){
			for(int k=0;k<board[i].length;k++){
				board[i][k]=new Piece();
				if(l==1){
					board[i][k]=new Piece("white");
					
				}
				if(l==6){
					board[i][k]=new Piece("black");
				}
				l++;
			}
		}


	}
}
